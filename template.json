{
  "Parameters": {
    "myBucket": {
      "Type": "String",
      "Default": ""
    },
    "MyS3Key": {
      "Type": "String",
      "Default": ""
    }
  },
  "Resources": {
    "MyTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "MyTable",
        "AttributeDefinitions": [
          {
            "AttributeName": "UserName",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "UserName",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "5",
          "WriteCapacityUnits": "5"
        }
      }
    },
    "ServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com",
                  "lambda.amazonaws.com",
                  "apigateway.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "AWS::Region"
              },
              "CounterService"
            ]
          ]
        },
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "DescribeQueryScanBooksTable",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:DescribeTable",
                    "dynamodb:Query",
                    "dynamodb:Scan"
                  ],
                  "Resource": {
                    "Fn::Join": [
                      "",
                      [
                        "arn:aws:dynamodb:",
                        {
                          "Ref": "AWS::Region"
                        },
                        ":",
                        {
                          "Ref": "AWS::AccountId"
                        },
                        ":table/MyTable"
                      ]
                    ]
                  }
                }
              ]
            }
          },
          {
            "PolicyName": "APIGatewayAWSProxyExecPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Resource": [
                    "*"
                  ],
                  "Action": [
                    "sns:ListTopics",
                    "lambda:InvokeFunction"
                  ]
                }
              ]
            }
          }
        ]
      },
      "DependsOn": [
        "MyTable"
      ]
    },
    "AMIIDLookup": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "counter_get.handler",
        "Code": {
          "S3Bucket": {
            "Ref": "myBucket"
          },
          "S3Key": {
            "Ref": "MyS3Key"
          }
        },
        "Runtime": "python2.7",
        "Timeout": "25",
        "Role": {
          "Fn::GetAtt": [
            "ServiceRole",
            "Arn"
          ]
        }
      },
      "DependsOn": [
        "SeviceRole"
      ]
    },
    "CounterAPI": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": "CounterAPI"
      }
    },
    "Count": {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId": {
          "Ref": "CounterAPI"
        },
        "ParentId": {
          "Fn::GetAtt": [
            "CounterAPI",
            "RootResourceId"
          ]
        },
        "PathPart": "Count"
      },
      "DependsOn": [
        "CountAPI"
      ]
    },
    "CountGet": {
      "Type": "AWS::ApiGateway::Method",
      "Properties": {
        "HttpMethod": "GET",
        "ResourceId": {
          "Ref": "Count"
        },
        "RestApiId": {
          "Ref": "CounterAPI"
        },
        "AuthorizationType": "NONE",
        "Integration": {
          "Type": "AWS_PROXY",
          "IntegrationHttpMethod": "POST",
          "Credentials": {
            "Fn::GetAtt": [
              "ServiceRole",
              "Arn"
            ]
          },
          "Uri": {
            "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${AMIIDLookup.Arn}/invocations"
          }
        }
      },
      "DependsOn": [
        "Count",
        "CountAPI",
        "ServiceRole",
        "AMIIDLookup"
      ]
    },
    "CounterAPIDeployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "Properties": {
        "RestApiId": {
          "Ref": "CounterAPI"
        },
        "StageName": "Dev",
        "StageDescription": {
          "StageName": "Dev"
        },
        "Description": "My deployment"
      },
      "DependsOn": [
        "CountGet",
        "Count",
        "CountAPI"
      ]
    }
  }
}