{
  "Parameters": {
    "myBucket": {
      "Type": "String",
      "Default": ""
    },
    "MyS3Key": {
      "Type": "String",
      "Default": ""
    }
  },
  "Resources": {
    "MyTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "MyTable",
        "AttributeDefinitions": [
          {
            "AttributeName": "UserName",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "UserName",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "5",
          "WriteCapacityUnits": "5"
        }
      }
    },
    "ServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "AWS::Region"
              },
              "CounterService"
            ]
          ]
        },
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "DescribeQueryScanBooksTable",
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:DescribeTable",
                    "dynamodb:Query",
                    "dynamodb:Scan"
                  ],
                  "Resource": {
                    "Ref": "MyTable"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "AMIIDLookup": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "index.handler",
        "Code": {
          "S3Bucket": {
            "Ref": "myBucket"
          },
          "S3Key": {
            "Ref": "MyS3Key"
          }
        },
        "Runtime": "nodejs4.3",
        "Timeout": "25",
        "Role": {
          "Ref": "ServiceRole"
        }
      }
    }
  }
}
