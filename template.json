{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Outputs the time",
  "Resources": {
    "TimeFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "index.handler",
        "Runtime": "Python2.7",
        "CodeUri": "./",
        "Events": {
          "CounterAPI": {
            "Type": "Api",
            "Properties": {
              "Path": "/Counters",
              "Method": "GET"
            }
          }
        }
      }
    }
  }
}
